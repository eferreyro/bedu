<div class="row">
  {{#each appointment}}
  <div class="col-md-3">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title d-flex justify-content-between align-items-center">
          <strong>Cita: {{  title  }} </strong>
        </h4>
        <p>{{ description }}</p>
        <p>{{ citadate }}</p>
        {{!-- EDIT APPOINTMENT --}}
        <form action="/appointment/edit/{{_id}}">
          <button type="submit" class="btn btn-primary btn-block btn-sm"> Editar <span class="fas fa-edit"> </span></button>
        </form>
        <br>
        <!-- DELETE REQUEST -->
        <form action="/appointment/delete/{{_id}}?_method=DELETE" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit" class="btn btn-danger btn-block btn-sm">Eliminar <span class="fas fa-trash"> </span></button>
        </form>
      </div>
    </div>
  </div>



  {{else}}
  <div class="card mx-auto">
    <div class="card-body">
      <h1>Hola {{user.name}}</h1>
      <p clsss="lead">Aun no tienes citas</p>
      <a href="/appointment/add" class="btn btn-success btn-block">Crear Cita</a>
    </div>
  </div>
  
{{/each}}
</div>
