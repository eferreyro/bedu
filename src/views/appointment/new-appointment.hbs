<div class="col-md-4 mx-auto">
  <div class="card text-center">
    <div class="card-header">
      <h3>Nueva Cita</h3>
    </div>
    <div class="card-body">
      <form action="/appointment/new-appointment" method="POST">
        <div class="form-group">
          <input type="text" name="title" class="form-control" placeholder="Titulo" autofocus/>
        </div>
        <div class="form-group">
          <textarea name="description" class="form-control" placeholder="Descripcion"></textarea>
        </div>
        <div class="form-group row">
      <label for="Fecha-hora-cita" class="col">Fecha y hora de la Cita</label>
        <div class="col">
          <input class="form-control" name="appointmentDate"type="datetime-local" value="2011-08-19T13:45:00">
        </div>
      </div>
        <div class="form-group">
          <button class="btn btn-primary btn-block" type="submit">
            Crear Cita
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

